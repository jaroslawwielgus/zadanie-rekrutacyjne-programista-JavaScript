<mvc:View
controllerName="ui5.walkthrough.controller.Table"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Page title="{i18n>secondPageTitle}">
        <content>
            <Panel
                class="sapUiResponsiveMargin"
                width="auto">
                <content>
                  <Table
                     id="idCustomers"
                     items="{path: '/Customers', sorter: {path: 'CompanyName', descending: true}}"
                     class="sapUiSmallMargin"
                     >
                     <headerToolbar>
                        <Toolbar>
                           <Title text=""/>
                           <ToolbarSpacer/>
                           <SearchField 
                           width="50%" 
                           search=".onFilterInvoices"/>
                        </Toolbar>
                     </headerToolbar>
                     <columns>
                        <Column>
                           <Text text="Nazwa firmy" />
                        </Column>
                        <Column>
                           <Text text="Adres" />
                        </Column>
                        <Column>
                           <Text text="Miasto" />
                        </Column>
                        <Column>
                           <Text text="Kod pocztowy" />
                        </Column>
                        <Column>
                           <Text text="Numer telefonu" />
                        </Column>
                     </columns>
                     <items>
                        <ColumnListItem>
                           <cells>
                              <Text text="{CompanyName}" />
                              <Text text="{Address}" />
                              <Text text="{City}" />
                              <Text text="{PostalCode}" />
                              <Text text="{Phone}" />
                           </cells>
                        </ColumnListItem>
                     </items>
                  </Table>
               </content>
            </Panel>
         </content>
      </Page>
</mvc:View>